{
    "version": 2,
    "buildCommand": "npm ci && npm run build",
    "devCommand": "npm run dev",
    "installCommand": "npm ci",
    "framework": "nextjs",
    "env": {
        "NEXT_PUBLIC_API_BASE_URL": "https://grocery-index-api.nicklina.com/api/statcan"
    },
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                }
            ]
        },
        {
            "source": "/:path*\\.(css|js|mjs|ts|tsx|jsx)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "no-cache, no-store, must-revalidate"
                },
                {
                    "key": "Pragma",
                    "value": "no-cache"
                },
                {
                    "key": "Expires",
                    "value": "0"
                }
            ]
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/$1"
        }
    ]
}