{
    "name": "grocery-index",
    "version": "1.0.0",
    "description": "Grocery price index application with frontend and backend",
    "private": true,
    "workspaces": [
        "frontend",
        "backend"
    ],
    "scripts": {
        "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
        "dev:backend": "cd backend && npm run dev",
        "dev:frontend": "cd frontend && npm run dev",
        "build": "npm run build:backend && npm run build:frontend",
        "build:backend": "cd backend && npm run build",
        "build:frontend": "cd frontend && npm run build",
        "deploy": "cd backend && npm run deploy",
        "deploy:prod": "cd backend && npm run deploy:prod",
        "offline": "cd backend && npm run offline",
        "setup": "cd backend && npm run setup",
        "populate": "cd backend && npm run populate",
        "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install"
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    }
}